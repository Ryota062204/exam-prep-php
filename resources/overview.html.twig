<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quotes Overview</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Quotes Overview</h2>
        
        <!-- Filter Form -->
        <form class="d-flex justify-content-center gap-3 mb-4" action="?page=overview" method="GET">
            <input type="hidden" name="page" value="overview">

            <!-- Filter by Author -->
            <div class="form-group">
                <label for="author" class="form-label">Author (Name):</label>
                <input type="text" name="author" id="author" class="form-control" placeholder="e.g. Aristotle" value="{{ nameFilter }}">
            </div>

            <button type="submit" class="btn btn-primary align-self-end">Apply Filters</button>
        </form>

        <!-- Quotes Table -->
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Quote</th>
                        <th>Author</th>
                        <th>Date</th>
                        <th>Genre</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for quote in quotes %}
                        <tr>
                            <td>{{ quote.id }}</td>
                            <td>{{ quote.quote }}</td>
                            <td>{{ quote.author }}</td>
                            <td>{{ quote.creationDate }}</td>
                            <td>{{ quote.genre }}</td>
                            <td>{{ quote.quoteDescription }}</td>
                            <td>
                                <a href="?page=edit&id={{ quote.id }}" class="btn btn-sm btn-warning">Edit</a>
                                <a href="?page=delete&id={{ quote.id }}" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">No quotes found matching the criteria.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <a href="?page=create" class="btn btn-success mt-3">Add New Quote</a>
    </div>
</body>
</html>
